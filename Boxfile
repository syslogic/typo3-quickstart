    - curl
    - zip
    - gd
  shared_writable_dirs:
    - typo3conf/ext/
    - typo3/ext/
    - fileadmin/
    - typo3temp/
    - typo3conf/
    - uploads/
  after_build:
    - "php pagoda/typo3-install.php"
    - "mv pagoda/introductionpackage-4.7.5/typo3conf/ext/introduction/* pagoda/introduction"
    - "rm -R pagoda/introductionpackage-4.7.5/typo3conf/ext/introduction"
    - "mv pagoda/introductionpackage-4.7.5/* ./"
  after_deploy:
    - "mv pagoda/localconf.php typo3conf/localconf.php"
    - "mkdir typo3conf/ext/introduction; mv pagoda/introduction/* typo3conf/ext/introduction/"
    - "touch typo3conf/ENABLE_INSTALL_TOOL"
    - "mkdir fileadmin/_temp_"
